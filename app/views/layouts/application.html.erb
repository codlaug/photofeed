<!DOCTYPE html>
<html>
	<head>
		<title>PicDrop</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="header">
			<h1>
				<b>Pic</b>Drop
			</h1>
			<%= pods_button %>
			<%= feeds_button %>
		</div>
		<% flash.each do |name, msg| %>
			<div class="alert alert-<%= name %>">
				<%= msg %>
			</div>
		<% end %>

		<%= yield %>

	</body>
</html>
